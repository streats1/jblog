	<!--
		com.bit2015.logexample2 아래 패키지 로그들만  C:\LogExample\logexample2.log 파일에만  출력하는 로거
	-->
	<logger name="com.bit2017.mysite.exception"  level="info" additivity="false">
            <appender-ref ref="fileAppender" />
    </logger>
    
	<!--
		com.bit2015.logexample3 아래 패키지 로그들만  C:\LogExample\logexample3.log 파일과 콘솔로 출력하는 로거
	-->
	<logger name="com.bit2017.mysite.exception"  level="debug" additivity="false">
            <appender-ref ref="fileAppender" />
			<appender-ref ref="consoleAppender" />
    </logger>    
	
	<!-- 루트(글로벌) 로거 -->
	<root level="warn">
		<appender-ref ref="consoleAppender" />
	</root>

</configuration>